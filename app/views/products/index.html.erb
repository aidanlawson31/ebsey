<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

<div class="row mt-2">
	<div class="mx-auto">
		<%= link_to "List Item", new_product_path, class: "btn btn-lg btn-success" %>
	  <button class="btn btn-secondary btn-lg" type="button">
	    Categories
	  </button>
	  <button type="button" class="btn btn-lg btn-secondary dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
	    <span class="sr-only">Toggle Dropdown</span>
	  </button>
	  <div class="dropdown-menu">
	    <% @categories.each do |category| %>
				<%= link_to category.name, root_path(category_id: category.id), class: "dropdown-item" %>
			<% end %>
	  </div>
		<%= link_to "All", root_path, class: "btn btn-lg btn-primary" %>
	</div>
</div>


<div class="row">
	<% @products.each do |product| %>
	<div class="col-md-4 mt-2">
		<div class="card">
			<% if product.pictures.first %>
			  <%= image_tag product.pictures.first, class: "card-img-top" %>
			<% end %>
		  <div class="card-body">
			  <p class="card-cat"><%= product.category.name %></p>
		    <h5 class="card-title"><%= product.name %></h5>
		    <p class="card-text"><%= product.price %></p>
		    <%= link_to 'Show', product_path(product.id), class: "btn btn-primary" %>
		  </div>
		</div>
	</div>
	<% end %>
</div>
