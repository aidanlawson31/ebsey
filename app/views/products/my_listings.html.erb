<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">


<div class="row mt-2">
	<div class="mx-auto">
		<%= link_to "Back", root_path, class: "btn btn-lg btn-primary" %>
	</div>
</div>


<div class="row">
	<% @products.each do |product| %>
	<div class="col-md-4 mt-2">
		<div class="card">
			<% if product.pictures.first %>
			  <%= image_tag product.pictures.first, class: "card-img-top" %>
			<% end %>
		  <div class="card-body">
			  <p class="card-cat"><%= product.category.name %></p>
		    <h5 class="card-title"><%= product.name %></h5>
		    <p class="card-text"><%= product.price %></p>
		    <%= link_to 'Show', product_path(product.id), class: "btn btn-primary" %>
				<% if product.buyer_id %>
					<button type="button" class="btn btn-danger">Sold</button>
				<% else %>
		      <button type="button" class="btn btn-success">For Sale</button>
				<% end %>
		  </div>
		</div>
	</div>
	<% end %>
</div>
